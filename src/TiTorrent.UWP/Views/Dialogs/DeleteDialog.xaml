<ContentDialog
    x:Class="TiTorrent.UWP.Views.Dialogs.DeleteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="/DeleteDialog/DeleteDialog"
    Title="{x:Bind Manager.Torrent.Name}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock x:Uid="/DeleteDialog/Header" HorizontalAlignment="Right" />
        <CheckBox x:Uid="/DeleteDialog/IsDeleteFiles" HorizontalAlignment="Right" IsChecked="{x:Bind IsDeleteFiles, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
