<ContentDialog
    x:Class="TiTorrent.Dialogs.Views.DeleteDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TiTorrent.Dialogs.ViewModels"
    Title="{Binding Manager.Torrent.Name}"
    PrimaryButtonCommand="{Binding BPrimaryCommand}"
    PrimaryButtonText="ОК"
    SecondaryButtonText="Отмена"
    mc:Ignorable="d">

    <ContentDialog.DataContext>
        <vm:DeleteDialogViewModel />
    </ContentDialog.DataContext>

    <StackPanel>
        <TextBlock HorizontalAlignment="Right" Text="Вы действительно хотите удалить торрент?" />
        <CheckBox
            HorizontalAlignment="Right"
            Content="Удалить загруженные файлы"
            IsChecked="{Binding IsDeleteFiles, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
